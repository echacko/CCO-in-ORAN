{
    "run_module": ".",
    "simulation": {
        "module":"simulation",
        "classname":"CCOSimulation",
        "epochs": 30000
    },
    "simulated_rsrp":{
        "path":"data/power_maps/*.npz",
        "power_range": [30, 50]
    },
    "problem_formulation":{
        "module":"problem_formulation",
        "classname": "CCORasterBlanketFormulation",
        "parameters":{
            "lambda_weight": 0,
            "weak_coverage_threshold": -80
        }
    },
    "algorithm":{
        "module":"algorithms",
        "classname":"DDQN",
        "parameters":{
          "hidden_dim": 2048,
          "gamma": 0,
          "exploration_noise" :1,
          "exploration_noise_decay": 0.9999
        }
    }
}
